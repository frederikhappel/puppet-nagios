# This file is managed by puppet! Do not change!
cfg_dir=<%= @cfgddir %>
check_for_updates=0

object_cache_file=<%= @rundir %>/objects.cache
precached_object_file=<%= @rundir %>/objects.precache
resource_file=<%= @cfgdir %>/resource.cfg

status_file=<%= @rundir %>/status.dat
status_update_interval=<%= @status_update_interval %>

nagios_user=<%= @user %>
nagios_group=<%= @group %>

check_external_commands=1
command_file=<%= @command_file %>

lock_file=<%= @pidfile %>
temp_file=<%= @tempdir %>/nagios.tmp
temp_path=<%= @tempdir %>

event_broker_options=-1
<% @broker_modules.each do |broker_module| -%>
broker_module=<%= broker_module %>
<% end -%>

log_file=<%= @logdir %>/nagios.log
log_rotation_method=d
log_archive_path=<%= @logarchivedir %>
use_syslog=0
log_notifications=0
log_service_retries=1
log_host_retries=1
log_event_handlers=1
log_initial_states=0
log_current_states=1
log_external_commands=0
log_passive_checks=0

service_inter_check_delay_method=s
max_service_check_spread=30
service_interleave_factor=s
host_inter_check_delay_method=s
max_host_check_spread=30
max_concurrent_checks=<%= @max_concurrent_checks %>
check_result_reaper_frequency=<%= @check_result_reaper_frequency %>
max_check_result_reaper_time=<%= @max_check_result_reaper_time %>
check_result_path=<%= @checkresultdir %>
max_check_result_file_age=60
cached_host_check_horizon=15
cached_service_check_horizon=15
enable_predictive_host_dependency_checks=1
enable_predictive_service_dependency_checks=1
soft_state_dependencies=0

auto_reschedule_checks=0
auto_rescheduling_interval=30
auto_rescheduling_window=180

service_check_timeout=60
host_check_timeout=10
event_handler_timeout=10
notification_timeout=10
ocsp_timeout=5
perfdata_timeout=5

retain_state_information=1
state_retention_file=<%= @rundir %>/retention.dat
retention_update_interval=30
use_retained_program_state=1
use_retained_scheduling_info=<%= @use_retained_scheduling_info ? 1 : 0 %>
retained_host_attribute_mask=0
retained_service_attribute_mask=0
retained_process_host_attribute_mask=0
retained_process_service_attribute_mask=0
retained_contact_host_attribute_mask=0
retained_contact_service_attribute_mask=0
interval_length=60

use_aggressive_host_checking=0
execute_service_checks=<%= @execute_service_checks ? 1 : 0 %>
accept_passive_service_checks=1
execute_host_checks=<%= @execute_host_checks ? 1 : 0 %>
accept_passive_host_checks=1
enable_notifications=<%= @enable_notifications_real ? 1 : 0 %>
enable_event_handlers=1
obsess_over_services=0
obsess_over_hosts=0
translate_passive_host_checks=0
passive_host_checks_are_soft=0
check_for_orphaned_services=1
check_for_orphaned_hosts=1
service_check_timeout_state=u
check_service_freshness=<%= @check_service_freshness ? 1 : 0 %>
service_freshness_check_interval=60
check_host_freshness=<%= @check_host_freshness ? 1 : 0 %>
host_freshness_check_interval=60
additional_freshness_latency=15
enable_flap_detection=1
low_service_flap_threshold=5.0
high_service_flap_threshold=20.0
low_host_flap_threshold=5.0
high_host_flap_threshold=20.0
date_format=euro
illegal_object_name_chars=`~!$%^&*|'"<>?,()=
illegal_macro_output_chars=`~$&|'"<>
use_regexp_matching=0
use_true_regexp_matching=0

admin_email=root@localhost
admin_pager=pageroot@localhost

daemon_dumps_core=0
use_large_installation_tweaks=1
enable_environment_macros=<%= @enable_environment_macros ? 1 : 0 %>
allow_empty_hostgroup_assignment=1

debug_level=0
debug_verbosity=1
debug_file=<%= @logdir %>/nagios.debug
max_debug_file_size=100000000

process_performance_data=<%= @process_performance_data ? 1 : 0 %>
<% if @process_performance_data -%>
service_perfdata_file=<%= @perfdatadir %>/service-perfdata
service_perfdata_file_template=DATATYPE::SERVICEPERFDATA\tTIMET::$TIMET$\tHOSTNAME::$HOSTNAME$\tSERVICEDESC::$SERVICEDESC$\tSERVICEPERFDATA::$SERVICEPERFDATA$\tSERVICECHECKCOMMAND::$SERVICECHECKCOMMAND$\tHOSTSTATE::$HOSTSTATE$\tHOSTSTATETYPE::$HOSTSTATETYPE$\tSERVICESTATE::$SERVICESTATE$\tSERVICESTATETYPE::$SERVICESTATETYPE$
service_perfdata_file_mode=a
service_perfdata_file_processing_interval=15
service_perfdata_file_processing_command=process-service-perfdata-file

host_perfdata_file=<%= @perfdatadir %>/host-perfdata
host_perfdata_file_template=DATATYPE::HOSTPERFDATA\tTIMET::$TIMET$\tHOSTNAME::$HOSTNAME$\tHOSTPERFDATA::$HOSTPERFDATA$\tHOSTCHECKCOMMAND::$HOSTCHECKCOMMAND$\tHOSTSTATE::$HOSTSTATE$\tHOSTSTATETYPE::$HOSTSTATETYPE$
host_perfdata_file_mode=a
host_perfdata_file_processing_interval=15
host_perfdata_file_processing_command=process-host-perfdata-file
<% end -%>


